<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="org.eclipse.emf.cdo.ecp.provider"
         name="CDO Model Repository"
         point="org.eclipse.emf.ecp.core.providers">
      <provider
            class="org.eclipse.emf.cdo.ecp.internal.core.CDOProvider"
            description="Integrates ECP with CDO model repositories.">
      </provider>
   </extension>
   
  <extension
        point="org.eclipse.core.runtime.adapters">
     <factory
           adaptableType="org.eclipse.emf.ecp.core.ECPProject"
           class="org.eclipse.emf.cdo.ecp.internal.core.AdapterFactory">
        <adapter type="org.eclipse.emf.cdo.workspace.CDOWorkspace"/>
     </factory>
  </extension>

</plugin>
